<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ngame="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dm015"
        android:layout_marginTop="@dimen/dm025">
        <TextView
            android:id="@+id/time_tag_tv"
            style="@style/px24_212121"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dm050"
            android:paddingLeft="@dimen/dm010"
            android:paddingRight="@dimen/dm015"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_f5_right_left_round"
            android:gravity="center" />

        <TextView
            android:id="@+id/report_name_tv"
            style="@style/px26_212121"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dm050"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/time_tag_tv"
            android:layout_marginLeft="@dimen/dm050"
            android:gravity="center"
            android:text="" />
    </RelativeLayout>

    <TextView
        android:id="@+id/attend_period_tv"
        style="@style/px26_a5a5a5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dm005"
        android:drawablePadding="@dimen/dm015"
        android:paddingBottom="@dimen/dm010"
        android:paddingLeft="@dimen/main_margin_left_x"
        android:paddingRight="@dimen/main_margin_left_x"
        android:text="" />

    <TextView
        android:id="@+id/attend_wage_tv"
        style="@style/px26_a5a5a5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/dm005"
        android:drawablePadding="@dimen/dm015"
        android:paddingBottom="@dimen/dm010"
        android:paddingLeft="@dimen/main_margin_left_x"
        android:paddingRight="@dimen/main_margin_left_x" />

    <TextView
        android:id="@+id/remark_tv"
        style="@style/px26_a5a5a5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/dm005"
        android:drawablePadding="@dimen/dm015"
        android:paddingBottom="@dimen/dm020"
        android:paddingLeft="@dimen/main_margin_left_x"
        android:paddingRight="@dimen/main_margin_left_x" />

    <!--文件-->
    <com.android.baihuahu.view.ScrollListView
        android:id="@+id/horizontal_gridview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/main_margin_left_x"
        android:layout_marginRight="@dimen/main_margin_left_x"
        android:background="@color/f5"
        android:clipToPadding="false"
        android:divider="@color/transparent"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:listSelector="@color/transparent"
        android:overScrollMode="never"
        android:paddingBottom="@dimen/dm008"
        android:paddingLeft="@dimen/dm020"
        android:paddingRight="@dimen/dm020"
        android:paddingTop="@dimen/dm008"
        android:scrollbars="none" />

</LinearLayout>
